    "version": "0.1.2",
    "configurations": [
        {
            "name": "Golang",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "host": "127.0.0.1",
            "program": "${workspaceFolder}/bin/__debug_bin",
            "preLaunchTask": "go: build (debug)",
            // "output": "${workspaceFolder}/bin",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "MODE": "dev",
                "PG_HOST": "host.docker.internal",
                "PORT": ":8081"
            },
            "showLog": true
        }
    ]
}